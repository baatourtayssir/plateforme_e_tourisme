{% extends 'front/home.html.twig' %}
{% block avion %}{% endblock %}
{% block top_menu %}


<!--page title start-->
	<div class="page_title" data-stellar-background-ratio="0" data-stellar-vertical-offset="0" style="background-image:url({{asset("/front/assets/images/Home/home4.jpg")}});">
		<ul>
			<li><a href="javascript:;">Articles</a></li>
		</ul>
	</div>
	<!--page title end-->
	<div class="clearfix"></div>


{% endblock %}


{% block content %}


	<div class="full_width latest_news_section">
		<div class="container">
			<div class="row row_top">
				<div class="heading_team">
					<h3>Articles News</h3>
					<p>
						Stay updated with the latest in articles news and trends.</p>
				</div>
				{% for article in articles %}


					<!--  news box start -->
					<div class="col-lg-3 col-md-3 col-sm-6">
						<div class="latest_news_wrapper">
							<div class="news_thumb_wrapper">
								<img src="{{ asset('uploads/images/article/picture/' ~ article.picture) }}" alt="news image" class="img-responsive">
								<div class="latest_news_overlay"></div>
							</div>
							<div class="latest_news_desc">
								<h4>
									<a href="#">{{article.title}}</a>
								</h4>
								<div class="news_heading_tag">
									{% for category in article.categories %}


										<span>{{category.style}}</span>

									{% endfor %}
								</div>
								<p>{{article.shortDescription|raw}}</p>
								<div class="news_read_more">
									<a href="{{path('app_front_article_show',{'id': article.id})}}" class="read_more">Read More</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
				<!--  news box End -->


			</div>
		</div>
	</div>

	<!-- latest news section start -->



{% endblock %}
