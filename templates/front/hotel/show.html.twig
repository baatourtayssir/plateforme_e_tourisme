{% extends 'front/home.html.twig' %}
{% block avion %}{% endblock %}

{% block top_menu %}

	<!--page title start-->
	<div class="page_title" data-stellar-background-ratio="0" data-stellar-vertical-offset="0" style="background-image:url({{asset(" /front/assets/images/Home/home4.jpg")}});">
		<ul>
			<li><a href="javascript:;">DETAILS &nbsp OF &nbsp  A &nbsp{{hotel.intitule}}</a></li>
		</ul>
	</div>
	<!--page title end-->
	<div class="clearfix"></div>


{% endblock %}

{% block content %}
	<!-- traveller story section start -->
	<section class="full_width ds_traveller_story">
		<div class="container">
			<div class="row">
				<div class="col-lg-5 col-md-5 col-sm-8 col-xs-8">
					<div
						class="left_side_slider">

						<!-- slider start -->
						<div class="hotel_thumbnail_slider">
							<ul class="thumbnail_hotel_slider">
								{% for image in hotel.images %}
									<li><img src="{{ asset('uploads/images/hotel/pictures/' ~ image) }}" alt="slide"></li>
								{% endfor %}
							</ul>

							<div id="bx-pager" class="hotel_thumbnail_crousel">
								{% for image in hotel.images %}
									<a data-slide-index="{{ loop.index0 }}" href=""><img src="{{ asset('uploads/images/hotel/pictures/' ~ image) }}" alt="slide"></a>
								{% endfor %}
							</div>
						</div>

						<!-- slider end -->

					</div>

				</div>


				<div class="col-lg-7 col-md-7 col-sm-12 travelite_about_right_side">
					<div class="right_side_details">
						<h3>Hotel :
							<b class="traveller_text_b">{{hotel.intitule}}</b>
						</h3>
						<h5>
							<i class="icon-location4 mr-1"></i>
							{{hotel.region.intitule}}
						</h5>
						<h6>

							{{hotel.address}}
						</h6>
						<p>
							{{hotel.characteristic|raw}}
						</p>
					</div>
					<div class="full_width check_lists"></div>

				</div>

				<!-- right_part start -->
				<div class="col-lg-4 col-md-4 col-sm-12 event_right_side">
					<div class="travalite_latest_event">
						<h4 class="right_event_title">offers of this hotel</h4>
						<ul>
							{% for offer in offers %}
								<li>
									<div class="latest_event_date">
										{% for country in offer.countries %}


											<span>{{country.intitule}}</span>
										</div>
									{% endfor %}
									<div class="left_latest_thumb">
										<img src="{{ asset('uploads/images/offer/picture/' ~ offer.picture) }}" alt="latest event">
									</div>
									<div class="lates_event_right_side">
										<h4>
											<a href="#">{{offer.title}}</a>
										</h4>
									</div>

								</li>
							{% endfor %}


						</ul>
					</div>

				</div>

				<!-- right_part End -->

				<!-- Event posts start -->
				<div class="full_width event_posts_section">
					<div class="row">
						<h4 class="right_event_title">Some articles</h4>

						{% for article in articles[2:] %}
							<div class="col-lg-12">
								<div class="full_width event_recent_posts">
									<h4 class="rec_cat_title">
										<a href="#">{{article.title}}</a>
									</h4>
									<ul>
										{% for category in article.categories %}
											<li>{{ category.style }}</li>
										{% endfor %}
									</ul>
									<div class="full_width main_recent_wrap">
										<div class="left_thumb">
											<img src="{{ asset('uploads/images/article/picture/' ~ article.picture) }}" alt="blogimg" class="img-responsive">
										</div>

										<div class="right_content">
											<p>{{article.shortDescription|raw}}</p>
											<a href="{{path('app_front_article_show',{'id': article.id})}}">Read more..</a>
										</div>
									</div>
								</div>
							</div>
							<!-- recent_post_end -->
						{% endfor %}

					</div>
				</div>
				<!-- Event posts End -->
				<div class="full_width next_prev_event_links"></div>
			</div>
			<!-- left_part main End -->


		</div>

	</div>

