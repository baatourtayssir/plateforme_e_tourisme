{% extends 'base.html.twig' %}

{% block javascripts %}
	<script src="{{asset("global_assets/js/plugins/editors/summernote/summernote.min.js")}}"></script>
	<script src="{{asset("global_assets/js/plugins/forms/styling/uniform.min.js")}}"></script>
	<script src="{{asset("global_assets/js/demo_pages/editor_summernote.js")}}"></script>
{% endblock %}
{% block title %}
	Excursion
{% endblock %}
{% block menu %}
	<h4>
		<i class="icon-arrow-left52 mr-2"></i>
		<span class="font-weight-semibold">Home</span>
		- Excursion
	</h4>
{% endblock %}
{% block menu_petit %}
	<div class="breadcrumb">
		<a href="index.html" class="breadcrumb-item">
			<i class="icon-home2 mr-2"></i>
			Home</a>
		<span class="breadcrumb-item active">Excursion - Excursion management
		</span>
	</div>
{% endblock %}

{% block content %}

	<div class="content justify-content-center align-items-center">
		{{ form_start(form) }}


		<div {# class="form-control" #}>
			<i class="fa fa-calendar"></i>
			{{ form_label(form.title) }}
			{{ form_widget(form.title) }}
			<div class="form-error">
				{{ form_errors(form.title) }}
			</div>
		</div>
		<br>
		<div {# class="form-control" #}>
			<i class="fa fa-calendar"></i>
			{{ form_label(form.description) }}
			{{ form_widget(form.description, { 'attr': {'class': 'summernote'} }) }}
			<div class="form-error">
				{{ form_errors(form.description) }}
			</div>
		</div>
		<br>
		<div {# class="form-control" #}>
			<i class="fa fa-calendar"></i>
			{{ form_label(form.regions) }}
			{{ form_widget(form.regions) }}
			<div class="form-error">
				{{ form_errors(form.regions) }}
			</div>
		</div>
		<br>
		<div {# class="form-control select" #}>
			<i class="fa fa-calendar"></i>
			{{ form_label(form.goodAddress) }}
			{{ form_widget(form.goodAddress) }}
			<div class="form-error">
				{{ form_errors(form.goodAddress) }}
			</div>
		</div>
		<br>
		<div {# class="form-control" #}>
			<i class="fa fa-calendar"></i>
			{{ form_label(form.agence) }}
			{{ form_widget(form.agence) }}
			<div class="form-error">
				{{ form_errors(form.agence) }}
			</div>
		</div>
		<br>

		{{ form_label(form.picture) }}
		<div class="form-control">
			<i class="fa fa-calendar"></i>
			{{ form_widget(form.picture) }}
			<div class="form-error">
				{{ form_errors(form.picture) }}
			</div>
		</div>
		<br>


		<br>

		<div class="fc-left">
			<button type="submit" class="btn btn-success">{{ button_label|default('Save') }}</button>
		</div>
		<br>

		{{ form_end(form) }}
		<a href="{{ path("app_excursion_index")}}">
			<button class="btn btn-light">
				Close
			</button>
		</a>
	</div>
</div>{% endblock %}
