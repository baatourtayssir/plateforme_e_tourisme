{% extends 'base.html.twig' %}
{% block javascripts %}
	<script src="{{asset("global_assets/js/plugins/editors/summernote/summernote.min.js")}}"></script>
	<script src="{{asset("global_assets/js/plugins/forms/styling/uniform.min.js")}}"></script>
	<script src="{{asset("global_assets/js/demo_pages/editor_summernote.js")}}"></script>

	<script src="{{asset("global_assets/js/plugins/extensions/jquery_ui/interactions.min.js")}}"></script>
	<script src="{{asset("global_assets/js/plugins/forms/selects/select2.min.js")}}"></script>
	<script src="{{asset("global_assets/js/demo_pages/form_select2.js")}}"></script>
	<script src="{{asset("global_assets/js/demo_pages/form_inputs.js")}}"></script>
{% endblock %}
{% block title %}
	Review

{% endblock %}
{% block menu %}
	<h4>
		<i class="icon-arrow-left52 mr-2"></i>
		<span class="font-weight-semibold">Home</span>
		- Reviews pages</h4>
{% endblock %}
{% block menu_petit %}
	<div class="breadcrumb">
		<a href="index.html" class="breadcrumb-item">
			<i class="icon-home2 mr-2"></i>
			Home</a>
		<span class="breadcrumb-item active">Reviews Pages - Reviews management
		</span>
	</div>
{% endblock %}

{% block content %}

	<div class="card">
		<div class="card-header header-elements-inline">
			<h6 class="card-title">{{ review.comment|raw}}</h6>
			<div class="header-elements">
				<div class="list-icons">
					<a class="list-icons-item" data-action="collapse"></a>
					<a class="list-icons-item" data-action="reload"></a>
					<a class="list-icons-item" data-action="remove"></a>
				</div>
			</div>
		</div>

		<div class="content justify-content-center align-items-center">
			{{ form_start(form) }}


			<div {# class="form-control" #}>
				<i class="fa fa-calendar"></i>
				{{ form_label(form.client) }}
				{{ form_widget(form.client, { 'attr': {'class': 'form-control select-search'} }) }}
				<div class="form-error">
					{{ form_errors(form.client) }}
				</div>
			</div>
			<br>
			<div {# class="form-control" #}>
				<i class="fa fa-calendar"></i>
				{{ form_label(form.comment) }}
				{{ form_widget(form.comment, { 'attr': {'class': 'summernote'} }) }}
				<div class="form-error">
					{{ form_errors(form.comment) }}
				</div>
			</div>
			<br>
			<div>
				<i class="fa fa-calendar"></i>
				{{ form_label(form.date) }}
				{{ form_widget(form.date, { 'attr': {'class': 'form-control'} }) }}
				<div class="form-error">
					{{ form_errors(form.date) }}
				</div>
			</div>
			{# <br>
						<div {# class="form-control" #}
			{#>
							<i class="fa fa-calendar"></i>
							{{ form_label(form.Article) }}
							{{ form_widget(form.Article) }}
							<div class="form-error">
								{{ form_errors(form.Article) }}
							</div>
						</div> #}
			<br>
			{{ form_label(form.picture) }}
			<div class="form-control">
				<i class="fa fa-calendar"></i>
				{{ form_widget(form.picture) }}
				<div class="form-error">
					{{ form_errors(form.picture) }}
				</div>
			</div>
			<br>
			{{ form_label(form.images) }}
			<div class="form-control">
				<i class="fa fa-calendar"></i>
				{{ form_widget(form.images) }}
				<div class="form-error">
					{{ form_errors(form.images) }}
				</div>
			</div>

			<br>
			<br>

			<div class="fc-left modal-footer">
				<a href="{{ path("app_reviews_index")}}">
					<button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
				</a>

				<button type="submit" class="btn btn-success">{{ button_label|default('Save') }}
					<i class="icon-paperplane ml-2"></i>
				</button>
			</div>

			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
