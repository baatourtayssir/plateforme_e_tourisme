{% extends 'base.html.twig' %}

{% block title %}Create new user{% endblock %}



{% block body %}
<div class="card-body text-centre">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a href="/" class="navbar-brand">Baatour Tayssir</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#mobile-nav">
                <span class="navbar-toggle-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mobile-nav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="{{ path('user_')}}" class="nav-link">list</a>


                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_users_new')}}" class="nav-link">Add Admin</a>

                    </li>
                
                </ul>
            </div>
        </div>
    </nav>
    <section class="container">
        <div class="row">
            <div class="col"></div>
                <fieldset>
                    <h1>Show List</h1>

                    <table class="table">

                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Email</th>
                                <th>Password</th>
                                <th>Lastname</th>
                                <th>Roles</th>
                                {# <th>Lastname</th> #}
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{user.password}}</td>
                                <td>{{ user.lastname}}</td>
                                <td>
                                    {% for role in user.roles %}
                                        {% if role == "ROLE_USER" %}
                                          User
                                        {% elseif role == "ROLE_AGENT" %}
                                          Agent
                                        {% elseif role == "ROLE_ADMIN" %}
                                          Admin
                                       {% endif %}
                                    {% endfor %}
                                </td>
                               
                                <td>
                                    
                                     <a href="{{ path('app_users_edit', {'id': user.id}) }}" class="btn btn-success">Edit</a>
                                    <a href="{{ path('app_users_delete', {'id': user.id}) }}"  class="btn btn-danger" >Delate</a> 
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                
                </fieldset>

        </div>
    </section>
</div>
{% endblock %}
