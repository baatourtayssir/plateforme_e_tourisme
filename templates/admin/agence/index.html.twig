{% extends 'base.html.twig' %}

{% block javascripts %}
	<!-- Theme JS files -->
	<script src="{{ asset("global_assets/js/plugins/tables/datatables/datatables.min.js")}}"></script>
	<script src="{{ asset("global_assets/js/plugins/forms/selects/select2.min.js")}}"></script>
	<script src="{{asset("global_assets/js/demo_pages/datatables_basic.js")}}"></script>
	<!-- /theme JS files -->
{% endblock %}
{% block title %}Agency list
{% endblock %}
{% block menu %}
	<h4>
		<i class="icon-arrow-left52 mr-2"></i>
		<span class="font-weight-semibold">Home</span>
		- Agency </h4>
{% endblock %}
{% block menu_petit %}
	<div class="breadcrumb">
		<a href="index.html" class="breadcrumb-item">
			<i class="icon-home2 mr-2"></i>
			Home</a>
		<span class="breadcrumb-item active">Agency - Agency management
		</span>
	</div>
{% endblock %}


{% block content %}
<div class="card"  style="background-color:#d2d2c2;">

	<!-- Basic datatable -->
	<div class="card">
		<div class="card-header header-elements-inline">
			<h5 class="card-title">Agency list</h5>
			<div class="header-elements">
				<div class="list-icons">
					<a href="{{path('app_agence_new')}}" class="nav-link">

						<button type="submit" class="btn btn-success">
							<b>
								<i class="icon-plus3"></i>
							</b>
							  Add agency </button>
					</a>
				</div>

			</div>
		</div>

		<table class="table datatable-basic">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Email</th>
					<th>Phone number</th>
					<th>Adress</th>
					<th>Description</th>
					<th>Logo</th>
					<th class="">Actions</th>
				</tr>


			</thead>
			<tbody>
				{% for agence in agences %}
					<tr>
						<td>{{ agence.id }}</td>
						<td>{{ agence.name }}</td>
						<td>{{ agence.email }}</td>
						<td>{{agence.phoneNumber}}</td>
						<td>{{ agence.adress}}</td>
						<td>{{ agence.description}}</td>
						{# <td>{{ agence.brochurefilename}}</td> #}
						{# <td><img src={{asset('uploads/images/agences/logo' ~ agence.brochurefilename )}} alt="Image" width="150"></td> #}
						<td><img src="{{ asset('uploads/images/agences/logo/' ~ agence.brochureFilename) }}" width="80"></a></td>
						
						<td>
							<div class="row ">
								<a href="{{ path('app_agence_edit', {'id': agence.id}) }}" class="btn btn-primary btn-sm mr-1">Edit
								</a>
								<a class="btn btn-danger btn-sm" data-toggle="modal" data-target="#modal_Delete{{agence.id}}">Delete</a>
							</div>
						</td>
					</tr>
					<!-- Delete modal -->
					<div id="modal_Delete{{agence.id}}" class="modal fade" tabindex="-1">
						<div class="modal-dialog">
							<div class="modal-content">
								<div class="modal-header bg-danger">
									<h5 class="modal-title">Deletion</h5>
									<button type="button" class="close" data-dismiss="modal">&times;</button>
								</div>

								<div
									class="modal-body">
									{# <h6 class="font-weight-semibold">Text in a modal</h6> #}
									<p>Are you sure to delete this agence.</p>

								</div>

								<div class="modal-footer">
									<button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
									<a href="{{ path('app_agence_delete',{'id': agence.id})}}">
										<button type="button" class="btn bg-primary">Delete</button>
									</a>
								</div>
							</div>
						</div>
					</div>
					<!-- /Delete modal -->
				{% else %}
					<tr>
						<td colspan="5">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

</div>
{% endblock %}
