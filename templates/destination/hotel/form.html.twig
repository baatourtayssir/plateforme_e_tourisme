{% extends 'base.html.twig' %}

{% block javascripts %}
	<script src="{{asset("global_assets/js/plugins/editors/summernote/summernote.min.js")}}"></script>
	<script src="{{asset("global_assets/js/plugins/forms/styling/uniform.min.js")}}"></script>
	<script src="{{asset("global_assets/js/demo_pages/editor_summernote.js")}}"></script>
{% endblock %}
{% block title %}
	Hotel
{% endblock %}
{% block menu %}
	<h4>
		<i class="icon-arrow-left52 mr-2"></i>
		<span class="font-weight-semibold">Home</span>
		- Hotel
	</h4>
{% endblock %}
{% block menu_petit %}
	<div class="breadcrumb">
		<a href="index.html" class="breadcrumb-item">
			<i class="icon-home2 mr-2"></i>
			Home</a>
		<span class="breadcrumb-item active">Hotel - Hotel management
		</span>
	</div>
{% endblock %}

{% block content %}

	<div class="content justify-content-center align-items-center">
		{{ form_start(form) }}


		<div {# class="form-control" #}>
			<i class="fa fa-calendar"></i>
			{{ form_label(form.intitule) }}
			{{ form_widget(form.intitule) }}
			<div class="form-error">
				{{ form_errors(form.intitule) }}
			</div>
		</div>
		<br>
		<div {# class="form-control" #}>
			<i class="fa fa-calendar"></i>
			{{ form_label(form.address) }}
			{{ form_widget(form.address) }}
			<div class="form-error">
				{{ form_errors(form.address) }}
			</div>
		</div>
		<br>
		<div {# class="form-control" #}>
			<i class="fa fa-calendar"></i>
			{{ form_label(form.country) }}
			{{ form_widget(form.country) }}
			<div class="form-error">
				{{ form_errors(form.country) }}
			</div>
		</div>
		<br>

		<div {# class="form-control" #}>
			<i class="fa fa-calendar"></i>
			{{ form_label(form.characteristic) }}
			{{ form_widget(form.characteristic, { 'attr': {'class': 'summernote'} }) }}
			<div class="form-error">
				{{ form_errors(form.characteristic) }}
			</div>
		</div>
		<br>

		{{ form_label(form.picture) }}
		<div class="form-control">
			<i class="fa fa-calendar"></i>
			{{ form_widget(form.picture) }}
			<div class="form-error">
				{{ form_errors(form.picture) }}
			</div>
		</div>
		<br>


		<br>

		<div class="fc-left">
			<button type="submit" class="btn btn-success">{{ button_label|default('Save') }}</button>
		</div>
		<br>


	</fieldset>
	{{ form_end(form) }}
	<a href="{{ path("app_hotel_index")}}">
		<button class="btn btn-light">
			Close
		</button>
	</a>
</div></div>{% endblock %}
