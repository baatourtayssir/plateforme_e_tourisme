{% extends 'base.html.twig' %}

{% block javascripts %}
	<!-- Theme JS files -->
	<script src="{{ asset("global_assets/js/plugins/tables/datatables/datatables.min.js")}}"></script>
	<script src="{{ asset("global_assets/js/plugins/forms/selects/select2.min.js")}}"></script>
	<script src="{{asset("global_assets/js/demo_pages/datatables_basic.js")}}"></script>
	<!-- /theme JS files -->
{% endblock %}
{% block title %}Hotel list
{% endblock %}
{% block menu %}
	<h4>
		<i class="icon-arrow-left52 mr-2"></i>
		<span class="font-weight-semibold">Home</span>
		- Hotel
	</h4>
{% endblock %}
{% block menu_petit %}
	<div class="breadcrumb">
		<a href="index.html" class="breadcrumb-item">
			<i class="icon-home2 mr-2"></i>
			Home</a>
		<span class="breadcrumb-item active">Hotel - Hotel management
		</span>
	</div>
{% endblock %}


{% block content %}

	<div class="content">
		<div class="timeline-heading">

			<h2 class="timeline-title">Hotel Details</h2>
		</div>

		<div class="card blog-horizontal">
			
			<div class="card-body">
				<div class="card-img-actions mr-3">
					<img
					class="card-img img-fluid" src="{{ asset('uploads/images/hotel/picture/' ~ hotel.picture) }}" alt="">
					{# <div class="card-img-actions-overlay card-img">
																																																																					<a href="blog_single.html" class="btn btn-outline bg-white text-white border-white border-2 btn-icon rounded-round">
																																																																						<i class="icon-link"></i>
																																																																					</a>
																																																																				</div> #}
					<br><br>

					<div {# class="card-footer" #}>
						{% for image in hotel.images %}
							<a href="#">
								<img src="{{ asset('uploads/images/hotel/pictures/' ~ image) }}" class="rounded" width="60" height="60" alt="">
							</a>
						{% endfor %}
						<a href="{{ path('app_hotel_edit', {'id': hotel.id}) }}" class="btn btn-icon bg-transparent border-slate-300 text-slate rounded border-dashed">
							<i class="icon-plus22"></i>
						</a>
					</div>
				</div>


				<div class="media-body">
					<h2 class="media-title font-weight-semibold">
						<a href="#" class="text-default">{{hotel.intitule}}</a>
					</h2>
					<span class="d-block">
						<h5>
							<i class="icon-location4 mr-1"></i>
							{{hotel.region.intitule}}
						</h5>
						<h6>
							
							{{hotel.address}}
						</h6>
					</span>
				</div>
				<br>
				<div class="mb-4">
					<h6 class="font-weight-semibold">Characteristic</h6>
					{{ hotel.characteristic |raw}}
				</div>


			</div>
			<div class="text-right mr-3">
				<a href="{{ path('app_hotel_edit', {'id': hotel.id}) }}" class="btn btn-primary text-white">
					<i class="icon-pencil3 mr-2 "></i>
					Edit


				</a>
			</div>
			<br>

		</div>
		<!-- /blog layout #2 with image -->


	</div>


{% endblock %}
